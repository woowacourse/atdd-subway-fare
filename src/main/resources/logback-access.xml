<configuration>
  <appender class="ch.qos.logback.core.rolling.RollingFileAppender" name="FILE">
    <encoder>
      <pattern>%t{yyyy-MM-dd HH:mm:ss}\t%a\t%r\t%s\t%i{Referer}\t%i{User-Agent}\t%D\t%I</pattern>
      <!--            <pattern>%fullRequest%n%fullResponse</pattern>-->
    </encoder>
    <file>${LOG_PATH_NAME}</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${LOG_PATH_NAME}.%d{yyyyMMdd}</fileNamePattern>
      <maxHistory>1</maxHistory> <!-- 보관기간(개월) -->
    </rollingPolicy>
  </appender>

  <!-- 로그 위치 -->
  <appender class="ch.qos.logback.core.ConsoleAppender" name="STDOUT">
    <encoder>
      <pattern>%n###### HTTP Request ######%n%fullRequest%n###### HTTP Response
        ######%n%fullResponse%n%n
      </pattern>
    </encoder>
  </appender>
  <appender-ref ref="FILE"/>

  <appender-ref ref="STDOUT"/>
  <property name="LOG_DIR" value="${user.home}/log"/>


  <property name="LOG_PATH_NAME" value="${LOG_DIR}/attostack-access.log"/>
  <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener"/>

</configuration>